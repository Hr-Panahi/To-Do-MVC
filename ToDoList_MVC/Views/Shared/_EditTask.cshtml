@model tblTask
<form id="edit-task-form" method="post" asp-action="EditPopUp">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Task</h2>
            <hr />
        </div>
@*         <input type="hidden" asp-for=Id />
 *@

        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" type="text" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DueDate"></label>
            <input asp-for="DueDate" type="date" />
            <span asp-validation-for="DueDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DueTime"></label>
            <input asp-for="DueTime" type="time" />
            <span asp-validation-for="DueTime" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary" style="width:150px;">Save Changes</button>
        <a asp-controller="Task" asp-action="Index" class="btn btn-secondary" style="width:150px"> Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}