@model tblTask
    <form method="post" asp-action="Edit">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Edit Task</h2>
                <hr />
            </div>
            <input type="hidden" asp-for=Id />

            <div class="mb-3">

                <label class="col-form-label m2-4" for="inputDefault" asp-for="Title">Title</label>
                <input type="text" class="form-control" id="inputDefault" spellcheck="false" data-ms-editor="true">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
            <label class="col-form-label m2-4" for="inputDefault" asp-for="Description">Description</label>
            <input type="text" class="form-control" id="inputDefault" spellcheck="false" data-ms-editor="true">

                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="DueDate" type="date"/>
                <lable asp-for="DueDate"></lable>
                <input asp-for="DueTime" type="time"/>
                <lable asp-for="DueTime"></lable>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
            <a asp-controller="Task" asp-action="Index" class="btn btn-secondary" style="width:150px"> Back to List</a>
        </div>
    </form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
